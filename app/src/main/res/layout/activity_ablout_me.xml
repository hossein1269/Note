<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".Activities.AboutMeActivity">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/me_porofile"
        app:shapeAppearanceOverlay="@style/ImageCirc"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محمد حسین معانی"
        android:fontFamily="@font/iran_reg"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary_color"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/Send_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mh.maani279@outlook.com"
        android:fontFamily="@font/iran_reg"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary_color"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/Call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09924196845"
        android:fontFamily="@font/iran_reg"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary_color"
        android:layout_gravity="center"/>
</LinearLayout>